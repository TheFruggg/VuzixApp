<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White for focused state -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF69B4"/> <!-- Pink for default state -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
